<div class="headline-signup-login">
<h2>Sign up</h2>
</div>

<section class="signup-login-frame">

<form class="sign-up-group" action="/signup" method="POST">


  <input class="form-control" type="text" placeholder="Your username" name="username" id="username" value="{{username}}">


 
  <input class="form-control" type="email" id="input-email" name="email" placeholder="Your email" value="{{email}}"/>
 

 
  
  <input class="form-control" type="password" name="password" placeholder="Your password">
 
  <button class="btn btn-secondary" type="submit">Sign Up</button>
</form>

{{#if message}}
  <p style="color: red">{{message}}</p>
{{/if}}



</section>